    <div class="tableau">
        <object class="page" id="page" rel="import" data=""> <object/>
    </div>
    

    <script>
        // <iframe class="page" id="page" src=""></iframe>
        let page = "1"
        const args = {}
        try {
            for(const arg of window.location.href.split("?")[1].split("&")){
                args[arg.split("=")[0]] = arg.split("=")[1]
            }
            if(args.get){
                mouseUp(args.get, args.get)
            }
        } 
        catch(error){
            mouseUp("home", page)
        }


        function mouseOver(id) {
            if(id != page){
                document.getElementById(id).style.background = "#2c3e50";
                document.getElementById("s" + id).style.background = "#2c3e50";
            }
        }

        function mouseOut(id) {
            if(id != page){
                document.getElementById(id).style.background = "#34495e";
                document.getElementById("s" + id).style.background = "#34495e";
            }
        }

        function mouseUp(e, id){
            try{
                document.getElementById(page).style.background = "#34495e";
                document.getElementById("s" + page).style.background = "#34495e";
            }
            catch{}

            try{
                page = id;
                document.getElementById(page).style.background = "#2c3e50";
                document.getElementById("s" + page).style.background = "#fff";
            }
            catch{}

            document.getElementById("page").data = "/public/view/" + e + ".html?" + window.location.href.split("?")[1]
            
        }

        function mouseDown(id){
            document.getElementById(id).style.background = "#1a2530";
            document.getElementById("s" + id).style.background = "#1a2530";
        }
    </script>
    
